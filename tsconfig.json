{
  "compilerOptions": {
    "jsx": "react-jsx", // для версии React 17 и выше
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@data/*": ["./data/*"],
      "@services/*": ["./services/*"],
      "@utils/*": ["./utils/*"]
    },
    "resolveJsonModule": true
  }
}
